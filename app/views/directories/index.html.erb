<h1>Listing directories</h1>

<table>
  <tr>
    <th>Preview</th>
    <th>Name</th>
    <th>Metadata</th>
    <th>Subtitle</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @directories.each do |directory| %>
  <tr>
    <td><%= image_tag directory.image.url(:iphone_thumb) %></td>
    <td><%= directory.name %></td>
    <td><%= directory.metadata %></td>
    <td><%= directory.subtitle %></td>
    <td><%= directory.date %></td>
    <td><%= link_to 'Show', directory %></td>
    <td><%= link_to 'Edit', edit_directory_path(directory) %></td>
    <td><%= link_to 'Destroy', directory, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

