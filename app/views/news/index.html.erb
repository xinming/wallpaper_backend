<h1>Listing news</h1>

<table class="data_lost">
  <tr>
    <th>Thumbnail</th>
    <th>Title</th>
    <!-- <th>Subtitle</th> -->
    <th>News category</th>
    <!-- <th>Text</th> -->
    <th>Date</th>
    <!-- <th>By</th> -->
    <!-- <th>Metadata</th> -->

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= image_tag news.news.url(:iphone_thumb) %></td>
    <td><%= news.title %></td>
    <td><%= news.try("news_category").try "name" %></td>
    <td><%= news.date %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

